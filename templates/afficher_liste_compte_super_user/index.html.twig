{% extends 'base.html.twig' %}

{% block title %} Afficher liste des comptes (super-utilisateur){% endblock %}

{% block head %} <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"> {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .tr-user:hover { background-color: #00d1b2 };
</style>
<div style="text-align: -webkit-center">
    <h3 class="title is-4"> Liste des comptes utilisateurs</h3>
    <div>
        <table class="table" >
            <tr>
                <th> Identifiant </th>
                <th> Nom  </th>
                <th> Prénom </th>
                <th>  Adresse email </th>
                <th> Sexe </th>
                <th> Contact </th>
                <th> Reçoit des notifications </th>
                <th> Possede une voiture </th>
                <th> Action </th>
            </tr>
            {% for utilisateur in utilisateurs %}
            <tr class="tr-user">
                    <th> {{ utilisateur.getId() }} </th>
                    <th> {{ utilisateur.getNom() }} </th>
                    <th> {{ utilisateur.getPrenom() }} </th>
                    <th> {{ utilisateur.getAdresseMail() }} </th>                
                    <th> {{ utilisateur.getSexe() }} </th>
                    <th> {{ utilisateur.getNoTel() }} </th>
                    <th> {{ (utilisateur.isMailNotif() ? 'OUI' : 'NON')|raw }} </th>
                    <th> {{ utilisateur.isVoiture()  ? 'OUI' : 'NON' }} </th>
                    <th>
                        <button class="button is-primary" onclick="window.location.href='#' ">
                            Consulter
                        </button>
                    </th>
            </tr>
            {%endfor%}
        </table>
    </div>
</div>




{% endblock %}
