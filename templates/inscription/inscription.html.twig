{% extends 'base.html.twig' %}

{% block body %}

	<div class="hero is-fullheight">
		<div class="hero-head">
			<nav class="navbar has-background-primary" role="navigation" aria-label="main navigation">
				<div class="navbar-brand">
					<a class="navbar-item" href="../">
						{#<- Retour à l'accueil#}
					</a>
				</div>
			</nav>
		</div>


    <div class="hero is-fullheight">
    <div class="hero-body is-centered">
        <div class="column is-4 m-auto">
            <h1 class="title">Formulaire d'inscription</h1>
            {{ form_start(inscription_form) }}
                {{ form_row(inscription_form.adresseMail) }}
                {{ form_row(inscription_form.mdp) }}
                {{ form_row(inscription_form.nom) }}
                {{ form_row(inscription_form.prenom) }}
                {{ form_row(inscription_form.sexe) }}
                <label class="label">{{ form_widget(inscription_form.voiture) }} Je possède une voiture</label>
                {{ form_row(inscription_form.noTel) }} </label>
                <label class="label">{{ form_widget(inscription_form.mailNotif) }} Je souhaite recevoir des notifications de WeDrive</label>

                <div class="field is-grouped">
                    {{ form_row(inscription_form.annuler) }}
                    {{ form_row(inscription_form.creer) }}
                </div>
            {{ form_end(inscription_form) }}
        </div>
    </div>
    </div>

{% endblock %}
