{% extends 'base.html.twig' %}

{% block title %}Supprimer votre Compte{% endblock %}
{% block head %} <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"> {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h3 class="title is-4"> Confirmer la suppression de votre compte</h3>
<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">Mot de passe</label>
  </div>
  <div class="field-body">
    <div class="field" style="max-width:300px">
      <div class="control">
        <input class="input" type="password" placeholder="Normal sized input">
        <a class="button is-primary">
          Confirmer
        </a>
        <a class="button is-light">
          Annuler
        </a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
