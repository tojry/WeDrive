{% extends 'base.html.twig' %}

{% block title %}Supprimer votre Compte{% endblock %}
{% block head %} <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"> {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<script>

    function getPasswordInputValue(){
        var params = document.getElementById('password-input').value;
        return "/supprimerSonComptePerso/" + params + "";
    }

</script>
        {% for message in app.flashes('error') %}
            <div class="notification is-danger is-light"> <button class="delete"></button> {{ message }}</div>
        {% endfor %}

    <div class="hero is-fullheight">
		<div class="hero-head">	
		</div>
        <div class="hero-body is-centered">
            <div class="column is-4 m-auto">
                <h1 class="title is-4">Confirmer la suppression de votre compte</h1>
                <form action="{{ path('utilisateur.supprimerComptePerso') }}" method="post">
					<div class="field">
                        <a class="is-size-7 has-text-primary">Confirmer la suppression de votre compte avec votre mot de passe</a>
						<div class="control">
							<input class="input" type="password" id="password" name="_password">
						</div>
					</div>

					{# If you want to control the URL the user is redirected to on success
					<input type="hidden" name="_target_path" value="/account"> #}
					<div class="field">
						<button class="button is-primary is-fullwidth" type="submit">Confirmer</button>
					</div>
				</form>
            </div>
        </div>
    </div>

{% endblock %}
