{% extends 'base.html.twig' %}

{% block title %}Supprimer votre Compte{% endblock %}
{% block head %} <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"> {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<script>

    function getPasswordInputValue(){
        var params = document.getElementById('password-input').value;
        return "/supprimerSonComptePerso/" + params + "";
    }

</script>
        {% for message in app.flashes('error') %}
            <div class="notification is-danger is-light"> <button class="delete"></button> {{ message }}</div>
        {% endfor %}
    <div class="columns" style="justify-content:center; margin-top:15%;">
        <div class="column is-5">
        <h3 class="title is-4"> Confirmer la suppression de votre compte </h3>
            <div class="columns is-flex is-flex-direction-column">
                <div class="column">
                    <label for="Name">Mot de passe</label>
                    <input id="password-input" class="input is-primary" type="password" placeholder="">
                    <a class="is-size-7 has-text-primary">Confirmer la suppression de votre compte avec votre mot de passe</a>
                </div>
                <div class="column" style="display:flex">
                    <button class="button is-light is-fullwidth" type="submit">Annuler</button>
                    <button 
                    class="button is-primary is-fullwidth" type="submit" onclick="window.location.href=getPasswordInputValue()">Confirmer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
